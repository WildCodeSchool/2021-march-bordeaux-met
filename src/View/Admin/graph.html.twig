{% extends 'layout.html.twig' %}
{% block title %}
    {{ parent() }} - stats
{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <div >
                        <form action="/admin/graphData" method="post">
                        <label class="text-primary"  for="StartDate">Date d√©but </label>
                        <input type="date" name="startDate" id="date-start" required>
                        <label class="text-primary" for="StartDate">Date fin </label>
                        <input type="date" name="endDate" id="date-end" required>
                        <button class="btn btn-primary" id="date-submit">Go!</button>
                        <span class="alert-danger" id="display-error"></span>
                        </form>
                        <h2 class="h2 text-primary" id="graphTitle"></h2>
                    </div>
                </div>
                <canvas data-source={{ data_source }} class=" w-100" id="myChart" width="900" height="380"></canvas>
            </main>
        </div>
    </div>
{% endblock  %}
{% block javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/assets/scripts/dashboard.js"></script>
{% endblock %}
