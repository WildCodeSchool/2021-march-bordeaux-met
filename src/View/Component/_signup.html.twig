<div class="container">
    <div class="row">
        <div class="col-sm pt-5 mt-5">
            <img src="/assets/images/logo_art.png" class="img-responsive" alt="Logo artistique" width="90%">
        </div>
        <div class="col-sm pt-5 mt-5">
            <text class="text-center"><h1 class="h3 mb-3 font-weight-bold">Inscription</h1></text>
            <form method="post">
                <div class="form-group row pt-4">
                    <label for="pseudo-sign" class="col-sm-3 h4 text-primary">Pseudo :</label>
                    <div class="col-sm-9">
                        <input type="text" name="pseudo" class="form-control" id="pseudo-sign" maxlength="" required>
                    </div>
                    {{ errors.pseudo }}
                </div>
                <div class="form-group row pt-4">
                    <label for="inputPassword" class="col-sm-4 h4 text-primary">Password :</label>
                    <div class="col-sm-8">
                        <input type="password" name="password" class="form-control mb-4" id="inputPassword" maxlength="" required>
                    </div>
                </div>
                <button class="btn btn-lg btn-primary btn-block h3 text-white font-weight-bold" type="submit">S'inscrire</button>
            </form>
    </div>
    </div>
</div>