{% extends 'layout.html.twig' %}
{% block title %}
    {{ parent() }} - Solution
{% endblock %}
{% block content %}
    <div class="container mt-5  w-25 " >
        Question n° {{ session.numQuestion }}<br>
        Your answer : {{ questionStatus.userAnswer }}<br>
        Difference : {{ questionStatus.diff }} <br>
        Authorized : {{ questionStatus.currentErrorMargin }} <br>
        Nombre de Points gagnés : {{ questionStatus.nbPoints }} <br>
        Total : {{ session.currentScore + questionStatus.nbPoints }} <br>
        Conclusion : {{ questionStatus.gameStatus }} <br>
        <img class="img-thumbnail img-car"  src="{{ objectData['primaryImageSmall'] }}" alt="{{ objectData['title']}} " >
    </div>
    <div class="container text-center w-75">
        <p class="text-center h3 text-primary">
            {{ objectData['objectEndDate'] }}
        </p>
        <p class="text-break" >
            {{ objectData['artistDisplayName'] }}
        </p>
            <a class="btn btn-primary" href="/Game/quizz/{{ deptId }}">Question suivante</a>
        </div>
{% endblock %}
