{% extends 'layout.html.twig' %}
{% block title %}
    {{ parent() }} - Quizz
{% endblock %}
{% block content %}
    <h1>Quizz</h1>
    <div class="container w-25" >
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ primaryImg }}" class="d-block w-100 img-fluid" alt="...">
                </div>

                {% if additionalImages is not empty %}
                    {% for img in additionalImages %}
                        <div class="carousel-item">
                            <img src="{{ img }}" class="d-block w-100 img-fluid" alt="...">
                        </div>
                    {% endfor %}
                {%  endif %}

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <form action="solution" method="post">
            <div class="form-quizz">
                <input type="number" value="{{ objectEndDate }}" class="w-75">
                <button type="submit" class="btn btn-outline-danger w-25 " >
                    <i class="fas fa-check"></i>
                </button>
                </a>

            </div>
        </form>
    </div>

{% endblock %}
