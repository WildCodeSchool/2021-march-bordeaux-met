{% extends 'layout.html.twig' %}
{% block title %}
    {{ parent() }} - department
{% endblock %}
{% block content %}
<div class="container-fluid d-none d-lg-block">
    <div class="card card-aside " >
        <img src="/assets/images/departments/dept.jpg" id="card-img" class="card-img-top" alt="">
        <div class="card-body bg-danger align-self-end">
            <p id ="card-text" class="card-text text-white font-weight-bold text-center">Bienvenue. Veuillez choisir un d√©partement </p>
        </div>
    </div>
    <div class="">
        <img id="Image-Maps-Com-image-maps"  src="/assets/images/maps/met.png"  class='image-map justify-content-center' usemap="#image-maps" alt="met" />
        <map name="image-maps" id="ImageMapsCom-image-maps">
            {% for department in departments %}
            <area  alt="met{{department['dept_nb']}}"  id="dept{{department['dept_nb']}}" class="area" href="game/department/{{department['dept_nb']}}" shape="poly" coords="{{department['map_coords']}}" target="_self" title="{{department['description']}}"/>
            {% endfor %}
        </map>
    </div>
</div>
    <div class="container d-sm-none d-md-block d-lg-none mb-5 p-5" >
        <div class="row">
            {% for department in departments|slice(0,12) %}
            <div class="col-4 my-2">
                <div class="card">
                    <img src="/assets/images/departments/dept{{department['dept_nb']}}.jpg" class="card-img-top" alt="{{ department['title'] }}">
                    <a href="/" class="card-body text-danger">
                        <p class=" text-bold ">{{ department['title'] }}</p>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <!--partie portable-->
    <div class="container d-sm-block d-md-none">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="departements/dept1.jpg" class="d-block w-100" alt="...">
                    <a class="btn bg-danger">First slide label</a>
                    <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                </div>
                <div class="carousel-item" >
                    <img src="departements/dept3.jpg" class="d-block w-100" alt="...">

                    <a class="btn bg-danger self">Second slide label</a>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
                <div class="carousel-item">
                    <img src="departements/dept4.jpg" class="d-block w-100" alt="...">
                    <h5>Third slide label</h5>
                    <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <script src="script.js"></script>

{% endblock %}
